<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/android_padding">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spinner_top_bottom_margin"
        android:layout_marginTop="@dimen/spinner_top_bottom_margin" />


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/main_activity_recycler_view_top_margin"
        android:id="@+id/rv_posters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>