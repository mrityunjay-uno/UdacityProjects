<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/trailer_label"
        android:layout_marginTop="@dimen/trailer_text_view_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trailers"
        android:padding="@dimen/activity_detailView_padding"
        android:textSize="@dimen/review_text_size"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/main_activity_recycler_view_top_margin"
        android:id="@+id/rv_trailers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>